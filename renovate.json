{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranchPatterns": [
    "prod"
  ],
  "assignees": [
    "ABouveron"
  ],
  "includePaths": [
    "db/docker-compose.yml"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "major": {
        "enabled": false
      },
      "matchPackageNames": [
        "/(?i)redis/",
        "/(?i)postgres/",
        "/(?i)mariadb/",
        "/(?i)kong/"
      ]
    },
    {
      "matchPackageNames": [
        "supabase/postgres"
      ],
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      }
    },
    {
      "matchPackageNames": [
        "supabase/studio"
      ],
      "versioning": "regex:^(?<major>\\d{4})\\.(?<minor>\\d{2})\\.(?<patch>\\d{2}).*$"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "digest": {
        "enabled": false
      }
    }
  ]
}
